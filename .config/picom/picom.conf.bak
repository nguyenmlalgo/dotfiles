#################################
#             Shadows           #
#################################

shadow = false;

shadow-radius = 18;
shadow-opacity = 0.90;
shadow-offset-x = -23;
shadow-offset-y = -22;

shadow-color = "#000000"

shadow-exclude = [
  "name = 'Notification'",
  "class_g = 'Conky'",
  "class_g ?= 'Notify-osd'",
  "class_g = 'Cairo-clock'",
  "class_g = 'jgmenu'",
  "class_g = 'slop'",
  "class_g = 'Spotify'",
  "class_g = 'Dunst'",
  "class_g = 'firefox'",
  "class_g = 'Rofi'",
  "class_g = 'Code'",
  "_GTK_FRAME_EXTENTS@:c",
  "_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'"
];

#################################
#           Fading              #
#################################

fading = false;

fade-in-step = 0.03;
fade-out-step = 0.03;
fade-delta = 6;

no-fading-destroyed-argb = true;
no-fading-openclose = true;

fade-exclude = [
    "class_g = 'slop'",
    "class_g = 'Rofi'",
    "class_g = 'polybar'",
    "class_g = 'Dunst'",
    "class_g = 'scratch'"
];

#################################
#           Corners             #
#################################

corner-radius = 2

rounded-corners-exclude = [
  "window_type = 'dropdown_menu'",
  "window_type = 'popup_menu'",
  "window_type = 'popup'",
  "window_type = 'dock'",
  "window_type = 'desktop'",
  "class_g = 'Rofi'",
  "class_g = 'Dunst'",
  "class_g = 'dwm'",
  "class_g = 'dwmblocks'",
  "class_g = 'dmenu'"
];

